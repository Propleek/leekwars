// IA pour les lvl 1 à 6, tire 3 fois jusqu'au lvl 4, et attends un tour à 11 de distance pour frapper en premier à partir du lvl 5.

function sayCupidon(){
	var stupidSay = [
		"<3"
		,"TaylorSwift je t'aime !"
	];
	say(stupidSay[randInt(0, count(stupidSay))]);
}
global wait = true;

if(getWeapon()==null)setWeapon(WEAPON_PISTOL);

var enemy = getNearestEnemy();

// avance jusqu'à 11 et attend un tour pour shooter en premier.
if(getLevel()>4){
	if(wait && getCellDistance(getCell(), getCell(enemy)) > 10){
		while(getCellDistance(getCell(), getCell(enemy)) > 11 && moveToward(enemy, 1)>0);
	}
	else while((getCellDistance(getCell(), getCell(getNearestEnemy()))>7 || !lineOfSight(getCell(), getCell(enemy))) && moveToward(enemy, 1)>0);
	if(getCellDistance(getCell(), getCell(enemy)) <= 11 && wait){
		wait = false;
		say("Come at me bro !");
	}
}else{
	while(moveToward(enemy, 1) && useWeapon(enemy)<0);
}
while(useWeapon(enemy)>0);
sayCupidon();